    ViewData["Title"] = "Home Page";
	ViewBag.Title= "Website Bất Động Sản số 1 Nha Trang";
	List<News> listnews = ViewBag.listnews;
    List<Product> listcanho = ViewBag.listcanho;
    List<Product> listdatnen = ViewBag.listdatnen;
    List<Product> listnhapho = ViewBag.listnhapho;
    List<Product> listbietthu = ViewBag.listbietthu;

    List<Regional> listre = ViewBag.listregi;
}

	<!--tin tức nổi bật-->
	<div class=" row news0">
		<div class="col-12 mb-3  news1">
			<h2>Thông Tin Bất Động Sản Nha Trang Mới Nhất</h2>
			<p>Trước khi đầu tư hãy tìm hiểu kỹ thông tin về bất động sản Nha Trang. Dưới đây là những</p>
			<p>thông tin bổ ích và chính thống được chúng tôi chia sẻ.</p>
		</div>
		<div class="col-6 mb-3 news2">
			<div class="carousel-inner">
				<img src="~/myfiles/@listnews[0].ImgAvar" class="d-block w-100" alt="...">
				<div class="carousel-caption d-none d-md-block">
					<a href="/tintuc?id=@listnews[0].NewsId"><h5>@listnews[0].Title</h5></a>
					<p><i class="bi bi-calendar3"></i>@listnews[0].DateUp.Day/@listnews[0].DateUp.Month/@listnews[0].DateUp.Year</p>
				</div>
			</div>

		</div>
		<div class="col-6 mb-3 news3">
			@for (var i = 1; i < 3; i++)
		   {
			<div class="card mb-3" style="max-width: 680px;">
				<div class="row no-gutters">
					<div class="card-body col-md-4">
						<img src="~/myfiles/@listnews[i].ImgAvar" alt="...">
					</div>
					<div class="col-md-8">
						<div class="card-body">
							<a href="/tintuc?id=@listnews[i].NewsId"><h5 class="card-title">@listnews[i].Title</h5></a>
							<p class="card-text"><i class="bi bi-calendar3"></i><small class="text-muted">@listnews[i].DateUp.Day/@listnews[i].DateUp.Month/@listnews[i].DateUp.Year</small></p>
						</div>
					</div>
				</div>
			</div>
		   }
		</div>
		<div class="col-12 mb-3" style="text-align: center;"><a href="/tintuc" >Tất cả</a></div>
	</div>

@*	thông tin căn hộ*@
<section class="pt-3 section1">
        <div class="container">
            <div class="row">
                <div class="col-6 thanhkv alert-primary th1">
                    <h3 class="mb-3">Căn hộ </h3> 
                </div>
                <div class="col-6 text-right thanhkv th2 alert-primary">
                    <a href="/batdongsan?category=1">(tất cả)</a>     
                </div>
                <div class="col-12">
                    <div id="carouselExampleIndicators12" class="carousel slide" data-ride="carousel">
                        <div class="carousel-inner">
                            <div class="row">
                            @foreach (Product p in listcanho)
                           {
                               
                                <div class="col-md-4 mb-3" >
                                  <a href="/batdongsan/Chitiet?id=@p.ProductId" class="card-link list-group-item-action">
                                      <div class="card ">
                                          <img class="img-fluid" alt="100%x280" src="~/myfiles/@p.ImgAvar">
                                          <div class="card-body">
                                              @for (var i = 0; i < 5; i++)
                                             {
                                                  <i class="bi bi-star-fill" style="color: #feba45"></i>
                                             }
                                                @foreach (Regional r in listre)
                                                {
                                                    if (p.RegionalId == r.RegionalId)
                                                    {
                                                        <span style="color: #aaa;float: right;"><i class="bi bi-geo-alt-fill"></i> @r.RegionalName </span>
                                                    }
                                                }
                                              <h4 class="card-title" ><div style="height: 90px;overflow:hidden;">
                                                  #@p.ProductId.@p.ProductName</div></h4>
                                                  <p class="card-text">Giá: <samp style="color: red;">@p.LetterPrice </samp>  <i class="bi bi-cash-coin" style="color: #49be25"></i></p>
                                             
                                         </div>
                                      </div>
                                  </a>
                                </div>
                               
                           }
                           </div> 
                            </div>
                        </div>
                    </div>
                </div>
            </div>
    </section>

